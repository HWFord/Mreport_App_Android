<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvRapportTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Nom du Rapport"
        />
    <Button
        android:id="@+id/btnRapportAfficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/turquoise_third"
        android:textColor="@color/turquoise_primary"
        android:drawableLeft="@drawable/eye"
        android:text="afficher"/>
</LinearLayout>